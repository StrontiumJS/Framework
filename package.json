{
  "name": "strontium",
  "version": "0.1.2",
  "description": "StrontiumJS is a NodeJS web framework written in TypeScript for creating backend APIs for SaaS applications.",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "test": "npx nyc mocha -u tdd --require ts-node/register --require dotenv/config --require reflect-metadata 'tests/**/*.test.ts'",
    "report-coverage": "npx nyc report --reporter=text-lcov | npx coveralls",
    "lint": "./node_modules/.bin/prettier --list-different --config ./prettier.json \"{src,tests}/**/*.ts\" && tslint --project ./tsconfig.json \"{src,tests}/**/*.ts\"",
    "fix-lint": "./node_modules/.bin/prettier --config ./prettier.json --write \"{src,tests}/**/*.ts\" && tslint --fix --project ./tsconfig.json \"{src,tests}/**/*.ts\"",
    "precommit": "lint-staged",
    "develop": "./node_modules/.bin/mocha -w -u tdd --require ts-node/register --require reflect-metadata 'tests/**/*.test.ts'"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StrontiumJS/Framework.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "saas"
  ],
  "author": "Alexander Christie <alexanderchristie@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StrontiumJS/Framework/issues"
  },
  "homepage": "https://github.com/StrontiumJS/Framework#readme",
  "files": [
    "lib/src",
    "package-lock.json",
    "README.md",
    ".gitignore"
  ],
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-spies": "0.0.0",
    "@types/mocha": "^2.2.44",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "git://github.com/chaijs/chai-spies.git#master",
    "coveralls": "3.0.0",
    "dotenv": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "4.1.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "nyc": "11.4.1",
    "prettier": "1.9.2",
    "reflect-metadata": "^0.1.10",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/boom": "^4.3.8",
    "@types/express": "^4.11.0",
    "@types/ioredis": "^3.2.4",
    "@types/joi": "^13.0.3",
    "@types/lodash": "^4.14.91",
    "@types/mysql": "^2.15.2",
    "@types/node": "^8.0.57",
    "@types/uuid": "^3.4.3",
    "boom": "^7.1.1",
    "express": "^4.16.2",
    "ioredis": "^3.2.2",
    "joi": "^13.0.2",
    "lodash": "^4.17.4",
    "mysql": "^2.15.0",
    "uuid": "^3.1.0",
    "zafiro-validators": "^1.1.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ]
  },
  "lint-staged": {
    "*.{ts,md}": [
      "npm run fix-lint",
      "git add"
    ]
  }
}
